<jaml>
    <style link="">
        window {
            width: 500;
            height: 500;
        }

        .ldc {
            style: filled;
            digit-count: 2;
        }

        slide {
            orientation: vertical;
        }
    </style>
    <window title="Hello World" flavor="qt">
        <number name="lcd" mode="dec" margin="0 40 70 30"/>
        <slider class="slide"  range="0 99" value="0" tick-position="above" on-value-change="lcd:display(int)" />
        <button font-family="Times" font-size="18" font-weight="bold" margin="0 70 70 30" on-click="quit()">Quit!</button>

        <!--layout type="Box" orientation="vertical"></layout-->
    </window>
</jaml>

